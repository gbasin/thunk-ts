{
  "name": "pl4n",
  "version": "0.1.0",
  "description": "Multi-agent ensemble planning CLI (Bun + TypeScript)",
  "type": "module",
  "bin": {
    "pl4n": "src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "build:web": "bun run src/web/build.ts",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src tests",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test": "bun test",
    "quality": "bun run lint && bun run typecheck && bun run test && bun run build"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "clipboardy": "^4.0.0",
    "diff": "^5.2.0",
    "js-yaml": "^4.1.0",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-history": "^1.5.0",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-model": "^1.25.4",
    "prosemirror-state": "^1.4.4",
    "prosemirror-view": "^1.41.4",
    "sade": "^1.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/diff": "^8.0.0",
    "@types/js-yaml": "^4.0.9",
    "lit": "^3.2.1",
    "bun-types": "^1.1.25",
    "oxlint": "^0.13.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
